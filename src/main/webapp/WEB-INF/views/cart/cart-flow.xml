<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
http://www.springframework.org/schema/webflow/spring-webflow.xsd">

	<view-state id="shippingaddress" view="shippingaddress.jsp">
		<transition on="event1" to="checkoutconfirmation"></transition>
	</view-state>

	<view-state id="checkoutconfirmation" view="checkoutconfirmation.jsp">
		<transition on="event2" to="orderplacement"></transition>
	</view-state>

	<view-state id="orderplacement" view="orderplacement.jsp">

	</view-state>


</flow>